<article id="search">
    <form method="POST" action="[Search:Keyword:Link]">
        <div class="input-group">
            <input
                id="word_search"
                class="form-control"
                type="search"
                name="val"
                title="[Text:FormField]"
                value="[Search:Keyword:Value]" />
            <span class="input-group-btn">
                <button
                    class="btn btn-default"
                    type="submit"
                    value="[Text:FormValue]"
                    title="[Text:FormValue]">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </button>
            </span>
        </div>

    </form>
</article>