<article id="[App:Id:Safe]">
    <header>
        <h3>
            <img src="[App:Icon]" alt="icone [App:Name]" />
            <span>[App:Name]</span>
        </h3>
        <span id="desc_[App:Id:Safe]" title="[Text:Summary]">[App:Summary]</span>
    </header>
    <div>
        <a href="[App:Package:Name]" title="[Text:Download]: [App:Name]" aria-describedby="desc_[App:Id:Safe]">
            [Text:Download]
        </a>
        <a href="[App:Link]" title="[Text:Sheet]: [App:Name]" aria-describedby="desc_[App:Id:Safe]">
            [Text:Sheet]
        </a>
    </div>
    <ul>
        <li>
            <span>[Text:Size]:</span>
            <span>[App:Package:SizeReadable]</span>
        </li>
        <li>
            <span>[Text:Version]:</span>
            <span>[App:Package:Version]</span> - <span>[Text:Date]:</span>
            <span>[App:Date]</span>
        </li>
    </ul>
</article>
